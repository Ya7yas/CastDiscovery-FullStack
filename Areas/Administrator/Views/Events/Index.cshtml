@model IEnumerable<Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>

    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">All Events</h4>
                </div>
            </div>

            <div class="table-responsive">
                <table id="add-row" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>EventName</th>
                            <th>EventDate</th>
                            <th>Location</th>
                            <th>Organizer</th>
                            <th>Descriptin</th>
                            <th>Contact Email</th>
                            <th>Operations</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>EventName</th>
                            <th>EventDate</th>
                            <th>Location</th>
                            <th>Organizer</th>
                            <th>Descriptin</th>
                            <th>Contact Email</th>
                            <th>Operations</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.EventName</td>
                                <td>@user.EventDate</td>
                                <td>@user.Location</td>
                                <td>@user.Organizer</td>
                                <td>@user.Description</td>
                                <td>@user.ContactEmail</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Events" asp-controller="Events" asp-route-id="EventId" class="btn btn-outline-warning">Edit</a> |
                                    <a asp-action="Details" asp-controller="Events" asp-route-id="EventId" class="btn btn-outline-primary">Details</a> |
                                    <a asp-action="Delete" asp-controller="Events" asp-route-id="EventId" class="btn btn-outline-danger">Delete</a>
                                </td>
                                   </tr>
                                   
                              
                        }
                        
        </tbody>
        
                </table>
            </div>
        </div>
    </div>
    </div>
           
}
   
