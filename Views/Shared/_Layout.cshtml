    <script src="@Url.Content("~/assets/vendors/jquery-ui/jquery-ui.js")"></script>
    <script src="@Url.Content("~/assets/vendors/wow/wow.js")"></script>

    <!-- Template JS -->
    <script src="@Url.Content("~/assets/js/eston.js")"></script>
  
    
    @RenderSection("Scripts", required: false)
   
</body>
</html>
