@model IEnumerable<Talent>
<style>
    body {
        font-family: 'Arial', sans-serif; 
    }

    .page-header {
        position: relative;
        padding: 60px 0;
        color: #fff;
    }

    .page-header__bg {
        height: 300px;
        background-position: center;
        background-size: cover;
    }

    .project-page {
        margin: 20px 0;
    }

    .project-three__single {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        background-color: #f9f9f9;
        transition: transform 0.3s;
    }

        .project-three__single:hover {
            transform: scale(1.05); 
        }

    .project-three__img-box {
        position: relative;
    }

    .talent-img {
        width: 100%; 
        height: 200px; 
        object-fit: cover; 
    }

    .project-three__play {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.5);
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
    }

    .project-three__content {
        padding: 15px;
    }

    .project-three__title {
        font-size: 18px;
        color: #000; 
        margin: 0;
    }

    .project-three__sub-title {
        color: #555; 
    }

    .project-page__btn {
        margin-top: 20px;
        display: inline-block;
        padding: 10px 20px;
        background-color: #a70000; 
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .project-page__btn:hover {
            background-color: #900000; 
        }

</style>

<section class="page-header">
    <div class="page-header__bg" style="background-image: url('@Url.Content("~/assets/images/backgrounds/Talents.jpg")');">
    </div>

    <div class="container">
        <div class="page-header__inner">
            <h2>Talents</h2>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><span>/</span></li>
                    <li>Talents</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="project-page">
    <div class="container">
        <div class="project-page__filter-box">
            <ul class="project-page__filter style1 post-filter list-unstyled clearfix">
                <li data-filter=".filter-item" class="active"><span class="filter-text">All</span></li>
                <li data-filter=".actor"><span class="filter-text">Actors</span></li>
                <li data-filter=".director"><span class="filter-text">Directors</span></li>
                <li data-filter=".scenarist"><span class="filter-text">Scenarists</span></li>
            </ul>
        </div>
        <div class="row filter-layout">
            @foreach (var talent in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 filter-item @talent.Skills">
                    <div class="project-three__single">
                        <div class="project-three__img-box">
                            <div class="project-three__img">
                                <img src="@Url.Content(talent.ProfilePicture)" alt="Profile picture of @talent.FullName" class="img-fluid talent-img">
                            </div>
                            <a href="@Url.Action("Details", "Talents", new { id = talent.TalentId })" class="project-three__play">View Details</a>
                        </div>
                        <div class="project-three__content">
                            <h3 class="project-three__title">
                                <a href="@Url.Action("Details", "Talents", new { id = talent.TalentId })">
                                    @talent.FullName
                                </a>
                            </h3>
                            <p class="project-three__sub-title">@talent.Skills</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="project-page__btn-box">
            <a asp-action="Create" asp-controller="Talents" class="project-page__btn thm-btn">
                <span class="fas fa-long-arrow-alt-right"></span>Join Us
            </a>
        </div>

    </div>
</section>
