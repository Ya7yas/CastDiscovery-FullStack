@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<head>
    <style>
        body {
            background-image: url(../assets/images/backgrounds/mainimg.jpg);
        }

        .overlay-panel a {
            display: inline-block;
            padding: 10px 20px;
            background-color: black;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .overlay-panel a:hover {
                background-color: gray;
            }

        .back-home-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: white;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .back-home-button a:hover {
                background-color: gray;
            }
    </style>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Sign Up</title>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/account.css">
</head>
<body>
    <div class="back-home-button">
        <a asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>
    <br />
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form asp-action="Register" asp-controller="Account" method="post" id="registerForm" novalidate>
                <h1>Create Account</h1>

                <div class="form-group">
                    <input asp-for="FirstName" id="firstName" placeholder="First Name" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LastName" id="lastName" placeholder="Last Name" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Email" id="email" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" type="password" placeholder="Password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Your Password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Gender" placeholder="Gender" required />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <button type="submit">Sign Up</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>Welcome Back</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <a asp-action="Login" asp-controller="Account" id="signIn">Log In</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    

    @if (ViewBag.ErrorMessage != null)
    {
        <script>
            alert('@ViewBag.ErrorMessage');
        </script>
    }
</body>
