@model IEnumerable<ScenePro.Models.BlogPost>

@{
    ViewData["Title"] = "Blog Posts";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    body {
        background-color: #f4f4f4;
        color: #333;
        font-family: 'Roboto', sans-serif;
    }

    h1, h5, .card-title {
        font-family: 'Montserrat', sans-serif;
        color: #fff;
    }

    .btn-outline-primary, .btn-outline-secondary {
        border-color: #8B0000;
        color: white;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-outline-primary:hover, .btn-outline-secondary:hover {
            background-color: #8B0000;
            color: #fff;
        }

    .btn-create {
        background-color: #28a745;
        color: #fff;
        padding: 10px 25px;
        font-size: 1.2em;
        border: none;
        border-radius: 5px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s, transform 0.3s;
    }

        .btn-create:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .card {
        background-color: #2b2b2b;
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .card-talent {
        background-color: #000;
    }

    .card-organization {
        background-color: #1a1a1a;
    }

    .card-img-top {
        height: 300px;
        object-fit: cover;
        border-radius: 8px;
        transition: filter 0.3s, transform 0.3s;
    }

        .card-img-top:hover {
            filter: brightness(80%);
            transform: scale(1.05);
        }

    .card-body {
        color: #fff;
        font-family: 'Helvetica', sans-serif;
    }

    .card-footer {
        background-color: #333;
        color: #8B0000;
    }

    .text-white {
        color: #fff !important;
    }

    .verified-icon {
        color: #1e90ff;
        font-size: 1.2em;
        margin-left: 5px;
    }

    .page-header {
        position: relative;
        padding: 120px 0 60px;
        text-align: center;
        color: #fff;
    }

        .page-header h2 {
            font-size: 48px;
            color: #fff;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .thm-breadcrumb {
        font-size: 16px;
        color: #fff;
    }

        .thm-breadcrumb a {
            color: #fff;
        }

        .thm-breadcrumb li {
            display: inline;
            margin: 0 5px;
        }
</style>

<section class="page-header">
    <div class="container">
        <div class="page-header__inner">
            <p>Cast Discovery</p>
            <h2>Latest Blog Posts</h2>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><span>/</span></li>
                    <li>Blog</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<div class="text-center my-5">
   
        <a asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Create Post
        </a>
    
</div>

<div class="container">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6">
                <div class="card @(post.CreatorRole == "Talent" ? "card-talent" : "card-organization")">
                    <img class="card-img-top" src="~/images/@post.PostImage" alt="Blog Image" />
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">
                            @if (post.Content.Length > 100)
                            {
                                @post.Content.Substring(0, 100)
                             
                                    }
                            else
                            {
                                @post.Content
                            }
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="@Url.Action("Details", new { id = post.BlogPostId })" class="btn btn-sm btn-outline-secondary text-white">View</a>
                                <a href="@Url.Action("Edit", new { id = post.BlogPostId })" class="btn btn-sm btn-outline-primary text-white">Edit</a>
                            </div>
                            <small class="text-white">
                                Created by @post.CreatorName
                                @if (post.IsVerified)
                                {
                                    <i class="fas fa-check-circle verified-icon"></i>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
