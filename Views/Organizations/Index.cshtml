@model IEnumerable<Organization>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
    }

    .page-header {
        position: relative;
        padding: 60px 0;
        color: #fff;
    }

    .page-header__bg {
        height: 300px;
        background-position: center;
        background-size: cover;
    }

    .project-page {
        margin: 20px 0;
    }

    .project-three__single {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        background-color: #f9f9f9;
        transition: transform 0.3s;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between; 
    }

  

        .project-three__single:hover {
            transform: scale(1.05);
        }

    .project-three__img-box {
        position: relative;
    }

    .organization-image {
        width: 100%;
        height: 150px; 
        object-fit: cover;
    }

    .project-three__play {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.5);
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
    }

    .project-three__content {
        padding: 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between; 
    }

    .project-three__sub-title, .project-three__title {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .project-page__btn {
        margin-top: 20px;
        display: inline-block;
        padding: 10px 20px;
        background-color: #a70000;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .project-page__btn:hover {
            background-color: #900000;
        }
    
</style>
<section class="page-header">
    <div class="page-header__bg" style="background-image: url('@Url.Content("~/assets/images/backgrounds/Organization1.jpg")');">
    </div>

    <div class="container">
        <div class="page-header__inner">
            <h2></h2>
            <div class="thm-breadcrumb__inner">
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li><span>/</span></li>
                    <li>Organizations</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="project-page" style="margin-top: 50px;">
    <!-- Add space above this section -->
    <div class="container">
        <br><br>
        <div class="row filter-layout">
            @foreach (var organization in Model)
            {
                <div class="col-xl-6 col-lg-6 col-md-6 filter-item">
                    <div class="project-three__single">
                        <div class="project-three__img-box">
                            <div class="project-three__img">
                                <img src="@organization.OrganizationImage" alt="@organization.OrganizationName" class="organization-image">
                            </div>
                            <a href="@Url.Action("Details", "Organizations", new { id = organization.OrganizationId })" class="project-three__play">View Details</a>
                        </div>
                        <div class="project-three__content">
                            <p class="project-three__sub-title">Organization Overview: @organization.Overview</p>
                            <h3 class="project-three__title">@organization.OrganizationName</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="project-page__btn-box">
            <a asp-action="Create" asp-controller="Organizations" class="project-page__btn thm-btn">
                <span class="fas fa-long-arrow-alt-right"></span>Join Us
            </a>
        </div>
    </div>
</section>

